<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="344dp"
        android:layout_height="172dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image">



        <ImageView
            android:id="@+id/vibrant"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/vibrant_dark"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/vibrant_light"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/muted"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:visibility="visible"/>
        <ImageView

            android:id="@+id/muted_light"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="2dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/muted_dark"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:visibility="visible"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_vibrant_vibrant_dark"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TEXT: VIBRANT\nBG:VIBRANT_DARK"
            android:gravity="left|center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_vibrant_light_vibrant_dark"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TEXT: VIBRANT LIGHT \nBG:VIBRANT_DARK"
            android:gravity="left|center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/text_muted_muted_dark"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TEXT: MUTED  \nBG:MUTED_DARK"
            android:gravity="left|center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/text_muted_light_muted_dark"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TEXT: MUTED LIGHT \nBG:MUTED_DARK"
            android:gravity="left|center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
